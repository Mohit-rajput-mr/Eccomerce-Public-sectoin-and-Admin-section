@model OSP.Models.Category

<h2>Category Details</h2>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.CategoryId
        </dd>
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
    </dl>
    <a href="@Url.Action("Edit", "Categories", new { id = Model.CategoryId })">Edit</a> |
    <a href="@Url.Action("Index", "Categories")">Back to List</a>
</div>
