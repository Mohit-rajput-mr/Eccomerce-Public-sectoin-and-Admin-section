@model OSP.Models.DeliveryMethod

<h2>Edit Delivery Method</h2>

<form asp-action="Edit">
    <input asp-for="DeliveryMethodId" type="hidden" />
    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Charge">Charge</label>
        <input asp-for="Charge" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Charge" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
