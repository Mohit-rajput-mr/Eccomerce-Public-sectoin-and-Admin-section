@model OSP.Models.DeliveryMethod

<h2>Delete Delivery Method</h2>

<p>Are you sure you want to delete this delivery method?</p>
<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Name</dd>
    <dt class="col-sm-2">Charge</dt>
    <dd class="col-sm-10">@Model.Charge.ToString("C")</dd>
</dl>

<form asp-action="Delete" method="post">
    <input asp-for="DeliveryMethodId" type="hidden" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
