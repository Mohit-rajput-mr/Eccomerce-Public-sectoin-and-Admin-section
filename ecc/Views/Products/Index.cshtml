@model IEnumerable<OSP.Models.Product>

<h2>Products</h2>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>@Html.DisplayFor(modelItem => item.Name)</td>
        <td>@Html.DisplayFor(modelItem => item.Price)</td>
        <td>
            <a href="@Url.Action("Edit", "Products", new { id = item.ProductId })">Edit</a> |
            <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">Details</a> |
            <a href="@Url.Action("Delete", "Products", new { id = item.ProductId })">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
<a class="btn btn-primary" href="@Url.Action("Create", "Products")">Add New Product</a>
