@model OSP.Models.Product

<h2>Product Details</h2>

<div>
    <h4>@Model.Name</h4>
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" />
    <dl class="row">
        <dt class="col-sm-2">Price:</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>
        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Category:</dt>
        <dd class="col-sm-10">@Model.Category.Name</dd>
    </dl>
    <a href="@Url.Action("Edit", "Products", new { id = Model.ProductId })" class="btn btn-primary">Edit</a>
    <a href="@Url.Action("Index", "Products")" class="btn btn-secondary">Back to List</a>
</div>
